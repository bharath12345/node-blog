extends layout

block content
    div.post
        h2
            a(href=post.url)
                = post.title
        section.byline #{post.date.getDate()}.#{post.date.getMonth()+1}.#{post.date.getFullYear()}
        | <hr>
        div.tags
            - each tag in post.tags
                a(href=tagUrl(tag))
                    span.label.label-info #{tag}
        | <hr>
        include includes/html/twitter.html
        | <hr>
        div#entryBlock
        div.post.content
            != post.content

        include includes/html/disqus.html
